@model IEnumerable<MyStore.Models.Fruit>

@{
    ViewData["Title"] = "Fruits List";
}

<h2 class="mb-4 text-success fw-bold">🍎 Fruits List</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-lg"></i> Add New Fruit</a>
    <span class="text-secondary">Total Fruits: @Model.Count()</span>
</div>

<table class="table table-striped table-hover align-middle shadow-sm rounded">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Image</th>
            <th>Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fruit in Model)
        {
            <tr>
                <td class="fw-semibold">@fruit.Name</td>
                <td>@fruit.Description</td>
                <td class="text-primary">₹@fruit.Price.ToString("0.00")</td>
                <td>@fruit.Stock</td>
                <td>
                    @if (!string.IsNullOrEmpty(fruit.ImagePath))
                    {
                        <img src="/@fruit.ImagePath" alt="@fruit.Name" class="img-thumbnail" style="width:70px; height:70px; object-fit:cover;" />
                    }
                    else
                    {
                        <span class="text-danger">No Image</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@fruit.Id" class="btn btn-outline-primary btn-sm me-1"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-action="Delete" asp-route-id="@fruit.Id" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
