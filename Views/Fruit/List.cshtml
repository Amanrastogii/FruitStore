@model IEnumerable<MyStore.Models.Fruit>

    @{
    ViewData["Title"] = "Fruits List";
    }

    <div style="display: flex; align-items: center; margin-bottom: 20px;">
        <img src="https://em-content.zobj.net/thumbs/240/apple/354/red-apple_1f34e.png"
             alt="apple" width="40" height="40" style="margin-right: 10px;">
        <h2>Fruits List</h2>
    </div>

    <p>
        <a asp-action="Create" class="btn btn-success">Add New Fruit</a>
        <span class="ms-3">Total Fruits: @Model.Count()</span>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fruit in Model)
        {
            <tr>
                <td>@fruit.Name</td>
                <td>@fruit.Description</td>
                <td>₹@fruit.Price.ToString("F2")</td>
                <td>@fruit.Stock</td>
                <td>
                    @if (!string.IsNullOrEmpty(fruit.ImagePath))
                    {
                    <img src="/@fruit.ImagePath"
                         alt="@fruit.Name"
                         style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px; border: 1px solid #ddd;"
                         onerror="this.src='https://via.placeholder.com/80x80?text=No+Image'" />
                    }
                    else
                    {
                    <img src="https://via.placeholder.com/80x80?text=No+Image"
                         alt="No image"
                         style="width: 80px; height: 80px; border-radius: 8px;" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@fruit.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@fruit.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
