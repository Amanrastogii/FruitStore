@model MyStore.Models.Fruit

@{
    ViewData["Title"] = "Add Fruit";
}

<h2>Add Fruit</h2>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="mb-3">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Description</label>
        <input asp-for="Description" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
    </div>
    <div class="mb-3">
        <label>Stock</label>
        <input asp-for="Stock" class="form-control" type="number" required />
    </div>
    <div class="mb-3">
        <label>Image</label>
        <input type="file" name="imageFile" class="form-control" accept="image/*" />
        <small class="form-text text-muted">Accepted formats: JPG, PNG, GIF, WEBP, JFIF</small>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
